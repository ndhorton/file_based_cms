<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">edit</a>
      <form action="/<%= file %>/delete" method="post" class="inline">
        <button type="submit">delete</button>
      </form>
      <a href="/<%= file %>/duplicate">duplicate</a>
    </li>
  <% end %>
</ul>
<% unless @images.empty? %>
  <p>Uploaded images:</p>
  <ul>
    <% @images.each do |image| %>
      <li>
        <a href="/images/<%= image %>"><%= image %></a>
        <form action="/images/<%= image %>/delete" method="post" class="inline">
          <button type="submit">delete</button>
        </form>
      </li>
    <% end %>
  </ul>
<% end %>
<p><a href="/new">New Document</a></p>
<p><a href="/images/upload">Upload Image</a></p>
<% if session[:username] %>
  <form action="/users/signout" method="post">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a></p>
  <p class="user-status"><a href="/users/signup">Sign Up</a></p>
<% end %>
